<p id="notice"><%= notice %></p>

<h1>Vacancies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Payment</th>
      <th>Body</th>
      <th>Date</th>
      <th>Desc</th>
      <th>Skills</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vacancies.each do |vacancy| %>
      <tr>
        <td><%= vacancy.title %></td>
        <td><%= vacancy.payment %></td>
        <td><%= vacancy.body %></td>
        <td><%= vacancy.date %></td>
        <td><%= vacancy.desc %></td>
        <td><%= vacancy.skills %></td>
        <td><%= link_to 'Show', vacancy %></td>
        <td><%= link_to 'Edit', edit_vacancy_path(vacancy) %></td>
        <td><%= link_to 'Destroy', vacancy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

