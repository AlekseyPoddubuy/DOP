<div class="banner">
	<header>
		<div class="container ">
			<div class="row">
				<div class="col-lg-3">
					<div class="logo">
						<%= image_tag 'logo.png'  %>
					</div>
				</div>
				<div class="col-lg-9">
					<div class="menu">
